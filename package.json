{
  "name": "slipstack-react",
  "version": "0.0.0-semantic-release",
  "description": "Beautiful, sliding, stacking panes for React – inspired by Andy Matuschak’s sliding-pane notes UI.",
  "license": "MIT",
  "author": "nyvyn",
  "repository": {
    "type": "git",
    "url": "https://github.com/nyvyn/slipstack-react.git"
  },
  "homepage": "https://github.com/nyvyn/slipstack-react#readme",
  "keywords": [
    "react",
    "sliding",
    "stacking",
    "panes",
    "slipstack"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "commit": "git add -p && cz",
    "dev": "tsup --watch",
    "build": "tsup",
    "semantic-release": "semantic-release",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "lint": "eslint \"src/**/*.{ts,tsx}\" --fix",
    "prepare": "husky",
    "update scripts": "npx npm-check-updates -u"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@eslint/js": "^9.30.0",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "eslint": "^9.30.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "husky": "^9.0.0",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.2",
    "semantic-release": "^25.0.2",
    "tsup": "^8.0.0",
    "typescript": "^5.5.0",
    "typescript-eslint": "^8.35.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
  },
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "angular",
        "releaseRules": [
          {
            "type": "build",
            "release": "patch"
          },
          {
            "type": "docs",
            "scope": "README",
            "release": "patch"
          }
        ],
        "parserOpts": {
          "noteKeywords": [
            "BREAKING CHANGE",
            "BREAKING CHANGES"
          ]
        }
      }
    ],
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    "@semantic-release/npm",
    "@semantic-release/git"
  ],
  "release": {
    "branches": [
      "main"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && npx cz --hook || true"
    }
  }
}
